<link rel="stylesheet" href="/css/signUp.css">

<div class="form-container">

    <h1>Sign Up</h1>

    <div class="signUpForm">
        <form action="/users/create" method="POST">
            <input type="text" class="headers" name="name" placeholder="Your Name" required>
            <input type="email" class="headers" name="email" placeholder="Your Email" required>
            <input type="password" class="headers" name="password" placeholder="Password" required>
            <input type="password"  class="headers" name="confirm_password" placeholder="Confirm Password" required>
            <input type="submit" class="button" value="Sign Up">

        </form>
    </div>
    <p>
        <a href="/users/auth/google">Google Sign In/Sign Up</a>
    </p>
</div>

